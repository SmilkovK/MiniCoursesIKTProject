@model List<MiniCoursesDomain.DTO.ViewModels.HomeworkListViewModel>
@{
    ViewData["Title"] = "Homework List";
    var subjectId = ViewBag.SubjectId as Guid?;
}
<div class="container mt-4" style="max-width: 800px;">
    <h2 class="mb-4 text-center"> Homework List</h2>
    @if (subjectId.HasValue)
    {
        <div class="mb-3">
            <a asp-controller="Subject" asp-action="Index" class="btn btn-outlinesecondary">← Back to Subjects</a>
        </div>
    }
    <table class="table table-bordered table-hover shadow-sm rounded bg-white">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Subject</th>
                <th>Created By</th>
                <th style="width: 100px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.SubjectName</td>
                    <td>@item.CreatedByName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end mt-3">
        <a asp-action="Add" asp-route-subjectId="@subjectId" class="btn btn-primary">
            Add New Homework
        </a>
    </div>
</div>